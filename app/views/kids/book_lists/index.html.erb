
    <!-- Portfolio Grid Section -->
    <section id="portfolio" class="force-bg-color">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 style="color:white;">Those books found you</h2>
                    <hr class="star-light">
                </div>
            </div>
            <div class="row">
              <% @available_books.each do |book| %>
                <div class="col-sm-3 portfolio-item">
                  <a href=<%= kids_book_path(book) %> class="portfolio-link" data-toggle="modal">
                    <div class="caption">
                        <div class="caption-content">
                            <i class="fa fa-search-plus fa-3x"></i>
                            <%= book.description.truncate(50) %>
                        </div>
                    </div>
                    <img src=<%= book.img_url %> class="img-responsive" alt="">
                  </a>
                </div>
              <% end %>
            </div>
        </div>
    </section>


    <!-- Portfolio Grid Section -->
    <section id="portfolio">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2>Your Book Lists</h2>
                    <hr class="star-primary">
                </div>
            </div>
            <div class="row">
              <% @book_lists.each do |book_list| %>
                <div class="col-lg-3">                   
                    <div class="list-group">
                      <a class="list-group-item list-group-item-info" style="background-color: #796ab7; color: white;">
                        <h4 class="list-group-item-heading"><%= book_list.title %></h4>
                      </a>
                      <% book_list.books.each do |book| %>
                        <a href=<%= kids_book_path(book) %> class="list-group-item">
                          <h4 class="list-group-item-heading"><%= book.title %></h4>
                          <p class="list-group-item-text"><%= book.description.truncate(20) %></p>
                        </a>
                      <% end %>
                    </div>
                </div>
              <% end %>
            </div>
            <div class="col-lg-8 col-lg-offset-2 text-center">
                <a href="#" class="btn btn-lg btn-default">
                    <i class="fa fa-download"></i> Create New BookList
                </a>
            </div>
        </div>

    </section>