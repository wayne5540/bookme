
<!-- Portfolio Grid Section -->
<section id="portfolio">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2>Welcome little wizard!</h2>
                <p>Ready to show me your magic? Pick subjects you like.</p>
                <hr class="star-primary">
            </div>
        </div>
        <div class="row">
        <% ["animals", "art", "cooking", "drama", "games", "music", "science", "sports"].each do |subject| %>
          <div class="col-sm-3 portfolio-item">
              <a class="portfolio-link category-btn">
                  <img src=<%= image_path("#{subject}.png") %>  class="img-responsive" alt="">
              </a>
          </div>
        <% end %>

        </div>
    </div>
    <div class="col-md-12">
      <%= link_to("Go next >", kids_levels_path, class: "btn btn-default btn-lg pull-right") %>
    </div>
</section>



<script>
  $(".category-btn").click(function(e){
    if (!$(this).hasClass("check-box-like")) {
      $(this).addClass("check-box-like");
    } else {
      $(this).removeClass("check-box-like");
    };
  })
</script>